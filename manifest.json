{
  "name": "Boards Enhancement Kit",
  "short_name": "BEK",
  "author": "Tundra Fizz",
  "description": "Enhances the League of Legends boards by providing additional features to it.",
  "version": "0.4.3",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [{
    "matches": [
      "https://*.leagueoflegends.com/*"
    ],
    "css": [
      "css/bek-panel.css"
    ],
    "js": [
      "js/jquery.js",
      "js/perfect-scrollbar.js",
      "js/main.js"
    ],
    "run_at": "document_end"
  }],

  "web_accessible_resources": [
    "img/*.gif",
    "img/*.png"
  ],

  "browser_action": {
    "default_title": "Boards Enhancement Kit",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },

  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "*://*.leagueoflegends.com/*",
    "*://tundrafizz.space/*",
    "*://fizzic.al/*"
  ],

  "manifest_version": 2
}
